
<h2 class='text-center'>New Project</h2>
<div class='row'>
  <div class='col-md-12'>
    <%= form_for([:user, Project.new]) do |f| %>

      <div class="form-group">
        <%= f.label :app_name, class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
            <%= f.text_field :app_name %>
        </div>
      </div>
      <br >
      <div class='form-group'>
          <%= f.label :coding, class: 'col-sm-2 control-label' %>
        <div class='col-md-6'>
          <%= f.text_field :coding %>
        </div>
      </div>

      <div class='form-group'>
          <%= f.label :project_details, class: 'col-sm-2 control-label' %>
        <div class='col-md-6'>
          <%= f.text_area :project_details %>
        </div>
      </div>

      <div class='form-group'>
          <%= f.label :github, class: 'col-sm-2 control-label' %>
        <div class='col-md-6'>
          <%= f.text_field :github %>
        </div>
     </div>

      <div class='form-group'>
          <%= f.label :url, class: 'col-sm-2 control-label' %>
        <div class='col-md-6'>
          <%= f.text_field :url %>
        </div>
      </div>

      <div class='form-group'>
        <div class='col-md-offset-3 col-md-9'>
          <%= f.submit "save", class: 'btn btn-success btn-lg' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
