<h2 class='text-center'>Sign up</h2>
<div class='row'>
  <div class='col-md-12'>
    <%= form_for(resource, as: resource_name,
        :html => {class: "form-horizontal", role: "form"},
        url: genius_signup_path, remote: true) do |form| %>
          <%= devise_error_messages! %>

      <div class="form-group">
        <%= form.label :avatar, class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
            <%= form.file_field :avatar %>
        </div>
      </div>

      <div class='form-group'>
        <div class='control-label col-md-3'>
          <%= form.label :cohort_id %>
        </div>
        <div class='col-md-9'>
          <%= form.number_field :cohort_id %>
        </div>
      </div>

      <div class='form-group'>
        <div class='control-label col-md-3'>
          <%= form.label :city %>
        </div>
        <div class='col-md-9'>
          <%= form.text_field :city, class: 'form-control',
            autofocus: true %>
        </div>
      </div>

      <div class='form-group'>
        <div class='control-label col-md-3'>
          <%= form.label :username %>
        </div>
        <div class='col-md-9'>
          <%= form.text_field :username %>
        </div>
     </div>

      <div class='form-group'>
        <div class='control-label col-md-3'>
          <%= form.label :first_name %>
        </div>
        <div class='col-md-9'>
          <%= form.text_field :first_name, class: 'form-control',
            autofocus: true %>
        </div>
      </div>

      <div class='form-group'>
        <div class='control-label col-md-3'>
          <%= form.label :last_name %>
        </div>
        <div class='col-md-9'>
          <%= form.text_field :last_name, class: 'form-control' %>
        </div>
      </div>

      <div class='form-group'>
        <div class='control-label col-md-3'>
          <%= form.label :email %>
        </div>
        <div class='col-md-9'>
          <%= form.text_field :email, class: 'form-control'  %>
        </div>
      </div>

      <div class='form-group'>
        <div class='control-label col-md-3'>
          <%= form.label :password %>
        </div>
        <div class='col-md-9'>
          <%= form.text_field :password, class: 'form-control',
            autocomplete: "off" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>
                                    characters minimum)</em>
          <% end %><br />
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-md-3'>
          <%= form.label :password_confirmation %>
        </div>
        <div class='col-md-9'>
            <%= form.text_field :password_confirmation,
                      class: 'form-control', autocomplete: "off" %>
        </div>
      </div>

      <div class='form-group'>
        <div class='col-md-offset-3 col-md-9'>
          <%= form.submit "Sign up", class: 'btn btn-success btn-lg' %>
        </div>
      </div>
    <% end %>

    <div class='form-group'>
      <div class='col-md-offset-3 col-md-9'>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
