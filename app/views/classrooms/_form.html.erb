<%= form_with(model: genius, local: true) do |form| %>
<%= form_for @user, :as => :user, :url => sign_in_path(@user) do |f| %>
  <div class="field">
    <%= form.label :cohort %>
    <%= form.number_field :cohort, id: :cohort %>

    <%= form.label :full_name %>
    <%= form.text_field :full_name, id: :genius_full_name %>

    <%= form.label :web_site %>
    <%= form.text_field :url, id: :genius_web_site %>

    <%= form.label :final_app %>
    <%= form.text_field :final_app, id: :genius_final_app %>

    <%= form.label :github %>
    <%= form.text_field :github, id: :github %>

  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
